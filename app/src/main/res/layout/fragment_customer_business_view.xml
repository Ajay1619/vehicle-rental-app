<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CustomerBusinessViewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:paddingHorizontal="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center">

            <!-- Business Logo -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_image_background"
                android:src="@mipmap/profile_pic_placeholder"
                android:padding="1dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/businessName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance"
                android:text="Business Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"/>

            <TextView
                android:id="@+id/customerContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance"
                android:text="Contact Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/loading_background"
                android:backgroundTint="@color/colorBackground"
                android:layout_marginTop="@dimen/margin_medium"
                android:padding="@dimen/padding_medium">

                <!-- Section Title -->
                <TextView
                    android:text="Firm Info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    style="@style/TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"/>

                <!-- Two-Column Layout -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingTop="@dimen/padding_small">

                    <!-- Column 1: Business Type -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/labelBusinessName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance"
                            android:text="Business Name"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/valueBusinessName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Brain Storm Info Tech"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@color/textSecondary"
                            android:paddingTop="@dimen/padding_extra_small"/>
                    </LinearLayout>

                    <!-- Column 2: Registration Number -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/labelBusinessRegisterName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance"
                            android:text="Register Number"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/valueBusinessRegisterNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC123DEF567"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@color/textSecondary"
                            android:paddingTop="@dimen/padding_extra_small"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingTop="@dimen/padding_small">

                    <!-- Column 1: Business Type -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/labelBusinessGSTIN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance"
                            android:text="GSTIN"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/valueGSTIN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC123DEF456"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@color/textSecondary"
                            android:paddingTop="@dimen/padding_extra_small"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/loading_background"
                android:backgroundTint="@color/colorBackground"
                android:layout_marginTop="@dimen/margin_medium"
                android:padding="@dimen/padding_medium">

                <!-- Section Title -->
                <TextView
