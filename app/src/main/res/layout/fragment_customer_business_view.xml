                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/valueAddressDistrict"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Puducherry"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@color/textSecondary"
                            android:paddingTop="@dimen/padding_extra_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/labelAddressState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance"
                            android:text="State"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/valueAddressState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pondicherry"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@color/textSecondary"
                            android:paddingTop="@dimen/padding_extra_small"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingTop="@dimen/padding_small">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/labelAddressCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance"
                            android:text="Country"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/valueAddressCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="India"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@color/textSecondary"
                            android:paddingTop="@dimen/padding_extra_small"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/labelAddressPinCode"
                            android:layout_width="wrap_content"
