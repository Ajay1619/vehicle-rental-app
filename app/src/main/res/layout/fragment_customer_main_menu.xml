                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardCornerRadius="@dimen/border_medium"
                    app:cardElevation="@dimen/elevation_large">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_menu_card_bubble_background"
                        android:padding="@dimen/padding_small">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invoices"
                            android:textColor="@color/textPrimary"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_size_medium"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/margin_small"
                            android:shadowColor="@color/colorTertiary"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:letterSpacing="0.1"
                            android:lineSpacingExtra="2dp"
                            android:gravity="center" />

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:src="@mipmap/menu_invoice"
                            android:contentDescription="Icon" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_extra_small"
                android:gravity="center"
                >
                <androidx.cardview.widget.CardView
