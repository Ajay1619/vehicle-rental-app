                            android:layout_marginTop="@dimen/margin_small"
                            android:shadowColor="@color/colorTertiary"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:letterSpacing="0.1"
                            android:lineSpacingExtra="2dp"
                            android:gravity="center" />

