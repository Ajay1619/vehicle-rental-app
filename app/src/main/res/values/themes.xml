<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light Theme -->
    <style name="Theme.VehicleRental" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/textPrimary</item>
        <item name="colorOnSecondary">@color/textSecondary</item>
        <item name="colorOnBackground">@color/textPrimary</item>
        <item name="colorOnSurface">@color/textSecondary</item>

        <!-- Transparent Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>


        <!-- System Bar Text Visibility (Dynamic Handling) -->
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

    </style>
</resources>
